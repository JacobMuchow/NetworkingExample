<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <!-- Name -->
    <TextView
        android:id="@+id/song_cell_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"

        android:textSize="18sp"/>

    <!-- Dash -->
    <TextView
        android:id="@+id/song_cell_dash_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/song_cell_name_id"
        android:layout_toEndOf="@id/song_cell_name_id"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"

        android:text="@string/dash"
        android:textSize="18sp"/>

    <!-- Artist -->
    <TextView
        android:id="@+id/song_cell_artist_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/song_cell_dash_id"
        android:layout_toEndOf="@id/song_cell_dash_id"
        android:layout_centerVertical="true"

        android:textSize="18sp"/>

</RelativeLayout>